{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "NodeJs ForzaStudio",
    "description": "NodeJs ForzaStudio Backend Challenge"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/posts": {
      "post": {
        "description": "",
        "responses": {
          "201": {
            "description": "Post created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponseError"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InputPostRequest"
              }
            }
          }
        }
      },
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "Posts list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponseList"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponseError"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetPostsListRequest"
              }
            }
          }
        }
      }
    },
    "/api/posts/{id}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post Data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponseError"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post Updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponseError"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InputPostRequest"
              }
            }
          }
        }
      },
      "delete": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post Deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostResponseError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InputPostRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Title Test"
          },
          "body": {
            "type": "string",
            "example": "Body test"
          },
          "tags": {
            "type": "array",
            "example": [
              "Tags",
              "Test",
              "Swagger"
            ],
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "title",
          "body",
          "tags"
        ]
      },
      "PostResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "1"
          },
          "title": {
            "type": "string",
            "example": "Title Test"
          },
          "body": {
            "type": "string",
            "example": "Body test"
          },
          "tags": {
            "type": "array",
            "example": [
              "Tags",
              "Test",
              "Swagger"
            ],
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "id",
          "title",
          "body",
          "tags"
        ]
      },
      "GetPostsListRequest": {
        "type": "object",
        "properties": {
          "page": {
            "type": "number",
            "example": 1
          }
        },
        "required": [
          "page"
        ]
      },
      "PostResponseList": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number",
                  "example": 1
                },
                "title": {
                  "type": "string",
                  "example": "Title Test"
                },
                "body": {
                  "type": "string",
                  "example": "Body test"
                },
                "tags": {
                  "type": "array",
                  "example": [
                    "Tags",
                    "Test",
                    "Swagger"
                  ],
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "count": {
            "type": "number",
            "example": 134
          }
        }
      },
      "PostResponseError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Error message"
          }
        },
        "required": [
          "message"
        ]
      }
    }
  }
}